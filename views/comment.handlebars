<br/>
<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
		<form action="/add_comment" method="POST">
			<h2>Please Provide Feedback <small>Your Suggestion matters to Us.</small></h2>
			<hr class="colorgraph">

        <Input type="hidden" id='firstname' name="firstname" value="{{user.firstname}}">
            <Input type="hidden" id='email' name="email" value="{{user.email}}">

			<div class="form-group">
				<input type="services" value="{{user.services}}" name="services" class="form-control input-lg" placeholder="Service" tabindex="4" required>
			</div>

      <div class="form-group">
				<textarea type="comments" value="{{user.comments}}" name="comments" class="form-control input-lg" placeholder="What's on your mind?" tabindex="4" required></textarea>
			</div>


			<hr class="colorgraph">
			<div class="row">
				<div class="col-xs-12 col-md-6"><input type="submit" value="Add Comment" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
			</div>
            <br>
            <div>
                {{#if errorMSG}}
                    <p style="color:red">{{errorMSG}}</p>
                {{/if}}
            </div>
		</form>
	</div>
</div>

<table  class="table table-striped table-bordered table-hover table-checkable" >
                  <thead>

                  <tr>
                  <th>User</th>
                    <th>services</th>
                  <th>Comments</th>

                          </tr>
                          </thead>
                          <tbody>
                            <tr>
                          {{#each com}}
  <tr>  <td>{{this.firstname}} </td>
     <td>{{this.services}} </td>
        <td>  {{this.comments}}</td> </tr>

                          {{/each}}
</tr>
                          </tbody>
                          </table>
