 <head>

    <!-- Custom styles for this template -->
     <link rel="stylesheet" href="../../assets/css/task.css">
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
      <a class="navbar-brand" href="/loggedinhome">StanDrop</a>


      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">

          <li class="nav-item active">
            <a class="nav-link" href="/logservices">Services <span class="sr-only">(current)</span></a>
          </li>

          <li class="nav-item active">
            <a class="nav-link" href="/logaboutus">About Us <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item active">
            <a class="nav-link" href="/logcontactus">Contact Us <span class="sr-only">(current)</span></a>
          </li>
          </li>

          <li class="nav-item active">
            <a class="nav-link" href="/comment">Comment <span class="sr-only">(current)</span></a>
          </li>

        </ul>
      </div>
    </nav>
    <br/>
    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <h5 class="my-0 mr-md-auto font-weight-normal">Hello {{user.firstname}}</h5>
      <nav class="my-2 my-md-0 mr-md-3">
          <a class="p-2 text-dark" href="/user_dashboard">My Dashboard</a>
        <a class="p-2 text-dark" href="/my_request">My Request</a>

      </nav>
      <a class="btn btn-outline-primary" href="/logout">Logout</a>
    </div>
    <br/>
<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">

        {{#if taskTitle}}
            <span>{{taskTitle}}</span>
        {{/if}}

        <p style="color:red">{{errorMSG}}</p>
        <p style="color:green">{{successMSG}}</p>


		<form action="/add_product" method="POST">

         <Input type="hidden" name="service_name" value="{{taskTitle}}">
            <Input type="hidden" name="service_id" value="{{taskId}}">
            <Input type="hidden" name="user_id" value="{{user._id}}">
            <Input type="hidden" name="user_firstname" value="{{user.firstname}}">
            <Input type="hidden" name="user_number" value="{{user.mobile}}">


			<h2>Please provide details </h2>
			<hr class="colorgraph">

			<div class="form-group">
				<input type="time" class="form-control input-lg"  tabindex="3" id='taskTime' name='task_time' value="10:00:00" placeholder="Task Time" required>
			</div>

      <div class="form-group">
				<input type="date" class="form-control input-lg"  tabindex="3" id='taskDate' name='task_date' value="{{task.task_date}}" placeholder="Task Date" required>
			</div>

      <div class="form-group">
				<input type="text" class="form-control input-lg" tabindex="3" id='location' name='location' value="{{task.location}}" placeholder="Location" required>
			</div>


			<div class="form-group">
				<textarea  class="form-control input-lg" id='taskDetail' name='task_detail' value="{{task.task_detail}}"  placeholder='Task Detail' tabindex="4" required></textarea>
			</div>


			<hr class="colorgraph">
			<div class="row">
				<div class="col-xs-12 col-md-6"><input type="submit" value="Book" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
			</div>
            <br>
            <div>
                {{#if errorMSG}}
                    <p style="color:red">{{errorMSG}}</p>
                {{/if}}
            </div>
		</form>
	</div>
</div>
