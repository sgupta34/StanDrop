<article>
     <head>

    <!-- Custom styles for this template -->
     <link rel="stylesheet" href="../../assets/css/userdashboard.css">
  </head>

  <body>

<br/>
<br/>
<nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
  <a class="navbar-brand" href="/loggedinhome">StanDrop</a>


  <div class="collapse navbar-collapse" id="navbarsExampleDefault">
    <ul class="navbar-nav mr-auto">

      <li class="nav-item active">
        <a class="nav-link" href="/logservices">Services <span class="sr-only">(current)</span></a>
      </li>

      <li class="nav-item active">
        <a class="nav-link" href="/logaboutus">About Us <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="/logcontactus">Contact Us <span class="sr-only">(current)</span></a>
      </li>
      </li>

      <li class="nav-item active">
        <a class="nav-link" href="/comment">Comment <span class="sr-only">(current)</span></a>
      </li>

    </ul>
  </div>
</nav>


    <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal">Hello {{user.firstname}}</h5>
      <nav class="my-2 my-md-0 mr-md-3">
          <a class="p-2 text-dark" href="/user_dashboard">My Dashboard</a>
        <a class="p-2 text-dark" href="/my_request">My Request</a>

      </nav>
      <a class="btn btn-outline-primary" href="/logout">Logout</a>
    </div>
    <br/>

    <div class='main--content'>
    <section  class='static-section--flat bring-your-talent hiw-lateral'>
        <div class='container--wide'>

            <form action="assign_task" method="post" >



    <div class='row row--thin' style="background-color: lightgray">


    <table  class="table table-striped table-bordered table-hover table-checkable" >
                <thead>

                <tr>

                <th>Service</th>
                <th>User</th>
                <th>Contact</th>
                <th>Task Time</th>
                <th>Task Date</th>
                <th>Location</th>
                <th>TaskDetail</th>
                <th>Employee</th>
                <th>Status</th>

                        </tr>
                        </thead>
                        <tbody>
                        {{#each notifications}}
    <tr>



    <th>{{this.service_name}}</th>
                <th>{{this.user_firstname}}</th>
                <th>{{this.user_number}}</th>
                <th>{{this.task_time}}</th>
                <th>{{this.task_date}}</th>
                <th>{{this.location}}</th>
                <th>{{this.task_detail}}</th>

                {{#if this.employee}}
                <th>{{this.employee}}</th>
                {{else}}
                <th>Not Available</th>
                {{/if}}


                {{#if this.status}}
                <th>Assigned</th>
                {{else}}
                <th>Not Assigned</th>
                {{/if}}
                        </tr>
                        {{/each}}
                        </tbody>
                        </table>
                        </form>
    </div></div>

    </section>
    </div>

    </div>

</article>
