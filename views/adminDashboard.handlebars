           <form action="assign_task" method="post" >
         <div class='exterior__bottom--md'><div class='exterior__bottom--md'>
         <select  name="employee_id">
           <option value="">Select Employee</option>
            {{#each employees}}
            <option value="{{this._id}}-{{this.name}}">{{this.name}}</option>
            {{/each}}

         </select>

         <button type="submit" class='btn btn-primary new-tasker__form-submit new-tasker__form-input' >Assign</button>
         </div>


<div class='row row--thin' style="background-color: lightgray">
       <p style="color:red">{{errorMSG}}</p>
<p style="color:green">{{successMSG}}</p>

<table  class="table table-striped table-bordered table-hover table-checkable" >
            <thead>

            <tr>
              <th>#</th>
              <th>Service</th>
            <th>User</th>
             <th>Contact</th>
             <th>Task Time</th>
             <th>Task Date</th>
             <th>Location</th>
             <th>TaskDetail</th>
             <th>Status</th>

                    </tr>
                    </thead>
                    <tbody>
                    {{#each notifications}}
<tr>
   {{#if this.status}}
               <th></th>
            {{else}}
               <th><input type="checkbox" value="{{this._id}}" name="product_id[]"></th>
            {{/if}}

  <th>{{this.service_name}}</th>
            <th>{{this.user_firstname}}</th>
            <th>{{this.user_number}}</th>
            <th>{{this.task_time}}</th>
            <th>{{this.task_date}}</th>
            <th>{{this.location}}</th>
            <th>{{this.task_detail}}</th>
            {{#if this.status}}
               <th>Assigned</th>
            {{else}}
               <th>Not Assigned</th>
            {{/if}}
                    </tr>
                    {{/each}}
                    </tbody>
                    </table>
                    </form>


